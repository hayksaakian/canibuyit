<p id="notice"><%= notice %></p>

<div class="hero-unit">
	<h1><%= @product.name %></h1>
	<% if @product.available %>
	<h4>is available</h4>
	<%= link_to 'Buy It', @product.url, :class => 'btn btn-large btn-success' %>
	<% else %>
	<h4>is unavailable...</h4>
	<%= form_tag(product_subscribe_path(@product), :class => 'form-inline') do %>
	  <fieldset>
	    <div class="control-group">
	          <div class="controls">
	            <%= text_field_tag :email_address, nil, :class => "span4", :placeholder => 'Email Address' %>
	  					<%= submit_tag 'Email me when it is available', :class => 'btn btn-success' %>
	          </div>
	    </div>
	  </fieldset>
	<% end %>
</div>



<small><%= link_to 'check for yourself', @product.url %> if you don't believe me</small>
<% end %>
<br>
